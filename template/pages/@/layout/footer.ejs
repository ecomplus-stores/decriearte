<%
// load footer options and contacts from content
const footer = _.cms('footer') || {}
const contacts = _.cms('contacts') || {}
%>
<div class="apx_newsletter">
  <div class="container">
    <div class="row">
      <div class="col d-flex">
        <div><img src="./img/uploads/favicon.png" alt=""></div>
          <h4>Assine nossa Newsletter
            <strong>E receba promoções</strong>
          </h4>
          <form action="">
            <input type="text" placeholder="Digite seu e-mail aqui">
            <button type="submit">Cadastrar</button>
          </form>
          <% if (footer.contacts.socials) { %>
            <div class="footer__social">
              <%- await include('@/layout/inc/networks', { _, contacts }) %>
            </div>
          <% } %>
      </div>
    </div>    
  </div>
</div>
<footer class="footer py-3 py-lg-4 py-xl-5">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-12">
        <h4>Institucional</h4>
        <% if (footer.links_1.list_pages) { %>
          <ul class="footer__links">
            <% (_.cms('pages') || []).forEach(slug => { %>
              <% const { title } = _.cms(`pages/${slug}`) %>
              <li>
                <i class="fas fa-angle-right"></i>
                <a href="/pages/<%= slug %>">
                  <%= title %>
                </a>
              </li>
            <% }) %>
          <% } %>
          </ul>
      </div>
      <div class="col-md-3 col-12">
        <h4>Atendimento</h4>
        <ul class="list-unstyled atendimento">
          <% if (footer.contacts.phone_wpp) { %>
            <% if (contacts.whatsapp) { %>
              <li>
                <span class="footer__list-icon">
                  <img
                    src="./img/theme_files/whatsapp.png"
                    alt="alpix.dev"
                  >
                </span>
                <a
                  href="javascript:;"
                  target="_blank"
                  rel="noopener"
                  class="whatsapp-link"
                  data-tel="<%= contacts.whatsapp.replace(/\D/g, '') %>"
                >
                  <b>Whatsapp</b>
                  <%= contacts.whatsapp %>
                </a>
              </li>
            <% } %>
            <% if (contacts.phone) { %>
              <li>
                <span class="footer__list-icon">
                  <img
                    src="./img/theme_files/telefone.png"
                    alt="alpix.dev"
                  >
                </span>
                <a
                  href="tel:+<%= contacts.phone.replace(/\D/g, '') %>"
                  target="_blank"
                  rel="noopener"
                >
                  <b>Telefone</b>
                  <%= contacts.phone %>
                </a>
              </li>
            <% } %>
            <li>
              <span class="footer__list-icon">
                <img
                  src="./img/theme_files/relogio.png"
                  alt="alpix.dev"
                >
              </span>
                <div>
                <b>Horário de Atendimento</b>
                <p>Segunda a Sexta das 8h às 18h<br>Sábado das 8h às 12h</p>
              </div>
              </a>
            </li>
          <% } %>
          <!-- <% if (footer.contacts.email) { %>
            <li>
              <a href="mailto:<%= contacts.email %>" target="_blank" rel="noopener">
                <%= contacts.email %>
              </a>
            </li>
          <% } %>
          <% if (footer.contacts.address) { %>
            <li>
              <address>
                <%= contacts.address %>
              </address>
            </li>
          <% } %> -->
        </ul>
      </div>
      <div class="col-md-3 col-12">
        <h4>Ajuda e Suporte</h4>
        <% if (footer.links_1.list_pages) { %>
          <ul class="footer__links">
            <% (_.cms('pages') || []).forEach(slug => { %>
              <% const { title } = _.cms(`pages/${slug}`) %>
              <li>
                <i class="fas fa-angle-right"></i>
                <a href="/pages/<%= slug %>">
                  <%= title %>
                </a>
              </li>
            <% }) %>
          <% } %>
          </ul>
      </div>
      <div class="col-md-3 col-12">
        <h4>Pagamento e Segurança</h4>
        <div class="footer__payment-methods">
          <% Object.keys(footer.payment_methods).forEach(method => { %>
            <% if (footer.payment_methods[method]) { %>
              <i class="pay-icon pay-icon--<%= method %>"></i>
            <% } %>
          <% }) %>
        </div>
        <div class="footer__stamps">
          <%- await include(`@/sections/stamps`, { _, opt: { stamps: footer.stamps } }) %>
        </div>
      </div>
    </div>
    
    <div class="ecom-credits">
      <div>
        <h2 class="footer__title footer__store">
          <%= footer.description.title || _.settings.name %>
        </h2>
        <p><%- footer.description.text || _.settings.description %></p>
      </div>
      <div>
        <a href="https://alpix.dev/?utm_source=decriearte" target="_blank" rel="noopener">
          <!-- <small>Desenvolvimento</small>  -->
          <img
            src="./img/theme_files/alpix_credits.png"
            alt="alpix.dev"
          >
        </a>
        <a href="https://e-com.plus?utm_source=alpix" target="_blank" rel="noopener">
          <!-- <small>Plataforma</small> -->
          <img
            src="https://ecom.nyc3.digitaloceanspaces.com/brand/plus/198x43.png"
            alt="E-Com Plus"
            style="height:20px!important;"
          >
        </a>
      </div>
    </div>
  </div>
</footer>


